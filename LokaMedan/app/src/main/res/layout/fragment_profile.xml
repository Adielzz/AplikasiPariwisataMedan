<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_bg"
            android:padding="4dp" />

        <TextView
            android:id="@+id/namaProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ahmad Fahmi Abdillah"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/emailProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fahmi@email.com"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang Saya"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/deskripsiProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mahasiswa Teknik Informatika yang antusias dengan teknologi dan pengembangan aplikasi Android."
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
